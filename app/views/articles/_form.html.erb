    <div class="field">
      <%= f.label "Fotógrafo" %><br>
      <%= f.select :photographer, options_for_select(@employees), include_blank: true %>
    </div>
    <div class="field">
      <%= f.label "Género" %><br>
      <%= f.text_field :gender, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label "Tema" %><br>
      <%= f.text_field :subject, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label "Revista" %><br>
      <%= f.select :magazineId, @magazines, include_blank: true %>
    </div>
    <div class="field">
      <%= f.label "Colorista" %><br>
      <%= f.select :colorist, @employees, include_blank: true %>
    </div>
    <div class="field">
      <%= f.label "Cant.Páginas" %><br>
      <%= f.number_field :totalpages, class: "form-control" %>
