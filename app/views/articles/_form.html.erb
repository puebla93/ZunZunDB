    </div>
    <div class="field">
      <%= f.label "UbicaciónOriginal" %><br>
      <%= f.text_field :originallocation, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label "Sección" %><br>
      <%= f.text_field :section, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Crear Artículo", class: "btn btn-primary" %>
