<p id="notice"><%= notice %></p>

<h1>Libros</h1>

<%= link_to '+ Nuevo Libro', new_book_path %>
<br>
<br>

<table style="width: 200%">
  <thead>
    <tr>
      <th>Título</th>
      <th>Año</th>
      <th>Autor</th>
      <th>Ilustrador</th>
      <th>Fotógrafo</th>
      <th>Cant.Páginas</th>
      <th>Formato</th>
      <th>Editor</th>
      <th>AñoEdición</th>
      <th>Editora</th>
      <th>ISBN</th>
      <th>Encuadernación</th>
      <th>Realisazión</th>
      <th>Diseñador</th>
      <th>Corrección</th>
      <th>Clasificación</th>
      <th>Contenido</th>
      <th>Pancarta</th>
      <th>Troquelado</th>
      <th>Colección</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.year %></td>
        <td><%= book.author %></td>
        <td><%= book.ilustrator %></td>
        <td><%= book.photographer %></td>
        <td><%= book.totalpages %></td>
        <td><%= book.format %></td>
        <td><%= book.editor %></td>
        <td><%= book.editionyear %></td>
        <td><%= book.editora %></td>
        <td><%= book.isbn %></td>
        <td><%= book.binding %></td>
        <td><%= book.realisation %></td>
        <td><%= book.designer %></td>
        <td><%= book.correction %></td>
        <td><%= book.clasification %></td>
        <td><%= book.content %></td>
        <td><%= book.banner %></td>
        <td><%= book.troquelado %></td>
        <td><%= book.collection %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
