    <div id="collapseSix" class="panel-collapse collapse">
      <div class="panel-body">
      <div class="col-md-5">
        <uL>
          <%= label_tag "Nombre" %><%= select_tag "colorist_name", options_for_select(@employees), include_blank: true, class: "form-control" %>
        <br>
        <%= label_tag "Género" %><%= select_tag "colorist_gender", options_for_select(["M", "F"]), include_blank: true, class: "form-control" %>
        </uL>
      </div>
      </div>
    </div>
  </div>
</div>